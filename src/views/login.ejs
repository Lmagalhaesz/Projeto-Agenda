<%- include('includes/head') %>
<%- include('includes/nav') %>
    
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8">
        <h1 class="text-center my-3">Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça login ou crie conta abaixo:</p>

        <%- include('includes/messages') %>

        <div class="row">

          <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem uma conta, crie e preencha o formulário abaixo.</p>

            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email" class="form-control" name="email" placeholder="Coloque seu email">
              </div>
              <div class="form-group">
                <label>Sua senha</label>
                <input type="password" class="form-control" name="password" placeholder="Coloque sua senha">
              </div>
              <button type="submit" class="btn btn-primary">Criar minha conta</button>
            </form>

          </div>


          <div class="col-lg">
            <h4>Faça seu Login</h4>
            <p>Se você tem uma conta, faça seu login abaixo. </p>

            <form action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email" class="form-control" name="email" placeholder="Coloque seu email">
              </div>
              <div class="form-group">
                <label>Sua senha</label>
                <input type="password" class="form-control" name="password" placeholder="Coloque sua senha">
              </div>
              <button type="submit" class="btn btn-primary">Logar minha conta.</button>
            </form>
          </div>

        </div>
     </div>

      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer') %>
